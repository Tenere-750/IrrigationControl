{
  "elements": [
    {
      "name": "General",
      "type": "ExpansionPanel",
      "caption": "Allgemeine Einstellungen",
      "items": [
        {
          "type": "SelectInstance",
          "name": "PumpInstance",
          "caption": "Pumpen KNX Instanz"
        },
        {
          "type": "SelectInstance",
          "name": "MasterSwitch",
          "caption": "Master Switch"
        },
        {
          "type": "NumberSpinner",
          "name": "ValveTime",
          "caption": "Ventilverfahrzeit (Sek.)",
          "minimum": 1,
          "maximum": 30
        }
      ]
    },
    {
      "name": "Zones",
      "type": "ExpansionPanel",
      "caption": "Zonen-Konfiguration",
      "items": [
        {
          "type": "List",
          "name": "Zones",
          "add": true,
          "delete": true,
          "caption": "Beregnungszonen",
          "columns": [
            {
              "caption": "Name",
              "name": "Name",
              "width": "200px",
              "type": "ValidationTextBox"
            },
            {
              "caption": "KNX Instanz",
              "name": "ValveInstance",
              "width": "200px",
              "type": "SelectInstance"
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Manuelle Steuerung",
      "items": [
        {
          "type": "Button",
          "caption": "Pumpe EIN",
          "onClick": "PumpOn();"
        },
        {
          "type": "Button",
          "caption": "Pumpe AUS",
          "onClick": "PumpOff();"
        },
        {
          "type": "Button",
          "caption": "Alle Zonen ausschalten",
          "onClick": "AllZonesOff();"
        },
        {
          "type": "List",
          "name": "ZoneControl",
          "caption": "Zonen manuell schalten",
          "rowCount": 10,
          "columns": [
            {
              "caption": "Zone",
              "name": "Name",
              "width": "200px"
            },
            {
              "caption": "AN",
              "name": "ButtonOn",
              "width": "100px",
              "type": "Button",
              "onClick": "ManualZoneOn($row['Index']);"
            },
            {
              "caption": "AUS",
              "name": "ButtonOff",
              "width": "100px",
              "type": "Button",
              "onClick": "ManualZoneOff($row['Index']);"
            }
          ],
          "values": "GetZoneControlList()"
        }
      ]
    }
  ]
}

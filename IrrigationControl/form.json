        {
            "type": "ExpansionPanel",
            "caption": "Manuelle Steuerung",
            "items": [

                {
                    "type": "List",
                    "name": "ManualZones",
                    "caption": "Zonen",
                    "rowCount": 7,
                    "add": false,
                    "delete": false,
                    "sort": false,
                    "columns": [
                        {
                            "caption": "AuswÃ¤hlen",

{
    "elements": [
        {
            "type": "ExpansionPanel",
            "caption": "Allgemeine Einstellungen",
            "items": [
                {
                    "type": "SelectObject",
                    "name": "MasterSwitchID",
                    "caption": "Master Schalter (Boolean)",
                    "filter": "Variable"
                },
                {
                    "type": "SelectObject",
                    "name": "PumpID",
                    "caption": "Pumpe (KNX Schaltobjekt)",
                    "filter": "Instance"
                },
                {
                    "type": "NumberSpinner",
                    "name": "ValveTravelTime",
                    "caption": "Ventil-Verfahrzeit (Sekunden)",
                    "minimum": 0,
                    "maximum": 30
                }
            ]
        },

        {
            "type": "ExpansionPanel",
            "caption": "Zonen-Konfiguration",
            "items": [
                {
                    "type": "List",
                    "name": "Zones",
                    "caption": "Zonen",
                    "rowCount": 7,
                    "add": false,
                    "delete": false,
                    "columns": [
                        {
                            "caption": "Name",
                            "name": "Name",
                            "width": "200px",
                            "edit": true
                        },
                        {
                            "caption": "KNX Valve ID",
                            "name": "ValveID",
                            "width": "auto",
                            "edit": {
                                "type": "SelectObject",
                                "filter": "Instance"
                            }
                        }
                    ]
                }
            ]
        },

        {
            "type": "ExpansionPanel",
            "caption": "Manuelle Steuerung",
            "items": [
                {
                    "type": "List",
                    "name": "ManualZones",
                    "caption": "Zonen auswählen",
                    "rowCount": 7,
                    "columns": [
                        {
                            "caption": "",
                            "name": "Selected",
                            "width": "40px",
                            "edit": "boolean"
                        },
                        {
                            "caption": "Zone",
                            "name": "Name",
                            "width": "200px"
                        }
                    ],
                    "onValueChange": "IPS_RequestAction($id, 'ToggleZone', json_encode(['Index' => $row['Index'], 'Selected' => $row['Selected']]));"
                },

                {
                    "type": "Button",
                    "caption": "Ausgewählte Zonen öffnen",
                    "onClick": "IPS_RequestAction($id, 'OpenSelectedZones', 1);"
                },
                {
                    "type": "Button",
                    "caption": "Ausgewählte Zonen schließen",
                    "onClick": "IPS_RequestAction($id, 'CloseSelectedZones', 1);"
                }
            ]
        }
    ],

    "status": [
        {
            "code": 102,
            "icon": "active",
            "caption": "Modul ist aktiv"
        },
        {
            "code": 200,
            "icon": "error",
            "caption": "Fehlerhafte Einstellungen"
        }
    ]
}

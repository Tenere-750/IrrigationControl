{
  "elements": [
    { "type": "Label", "caption": "Irrigation Control - Einstellungen (Modell B: definierbare Parallelit√§ten)" },

    { "name": "MasterID", "type": "SelectInstance", "caption": "Master KNX Instanz (DPT1)", "validParentTypes": [0] },
    { "name": "PumpID", "type": "SelectInstance", "caption": "Pumpen KNX Instanz (DPT1)", "validParentTypes": [0] },
    { "name": "GlobalTravelTime", "type": "NumberSpinner", "suffix": "Sekunden", "caption": "Globale Verfahrzeit (Sek)", "add": 7 },
    { "name": "MaxParallelZones", "type": "NumberSpinner", "caption": "Max. parallele Zonen", "minimum": 1, "maximum": 7, "add": 2 },

    {
      "type": "ExpansionPanel",
      "caption": "Zonen",
      "items": [
        {
          "name": "ZoneList",
          "type": "List",
          "caption": "Zonen",
          "rowCount": 7,
          "add": true,
          "delete": true,
          "columns": [
            { "name": "Enabled", "caption": "Aktiv", "width": "80px", "edit": { "type": "CheckBox" }, "add": true },
            { "name": "Name", "caption": "Name", "width": "180px", "edit": { "type": "ValidationTextBox" }, "add": "Neue Zone" },
            { "name": "Ventil", "caption": "Ventil KNX Instanz", "width": "200px", "edit": { "type": "SelectInstance" }, "validParentTypes": [0], "add": 0 },
            { "name": "Verfahrzeit", "caption": "Verfahrzeit (s)", "width": "100px", "edit": { "type": "NumberSpinner" }, "add": 7 },
            { "name": "RuntimeSeq1", "caption": "Laufzeit Seq1 (min)", "width": "140px", "edit": { "type": "NumberSpinner" }, "add": 5 },
            { "name": "RuntimeSeq2", "caption": "Laufzeit Seq2 (min)", "width": "140px", "edit": { "type": "NumberSpinner" }, "add": 5 },
            { "name": "ParallelWith", "caption": "Parallel mit (Indices, z.B. 1,3)", "width": "200px", "edit": { "type": "ValidationTextBox" }, "add": "" }
          ]
        }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Sequenzen",
      "items": [
        { "name": "Sequence1Enabled", "type": "CheckBox", "caption": "Sequenz 1 aktiv", "add": true },
        { "name": "Sequence1Start", "type": "TimeSpinner", "caption": "Startzeit Sequenz 1", "add": "06:00" },
        { "name": "Sequence1Order", "type": "ValidationTextBox", "caption": "Reihenfolge (comma-separated indices, z.B. 0,1,2)", "add": "" },
        { "type": "Divider" },
        { "name": "Sequence2Enabled", "type": "CheckBox", "caption": "Sequenz 2 aktiv", "add": true },
        { "name": "Sequence2Start", "type": "TimeSpinner", "caption": "Startzeit Sequenz 2", "add": "20:00" },
        { "name": "Sequence2Order", "type": "ValidationTextBox", "caption": "Reihenfolge (comma-separated indices, z.B. 3,4,5)", "add": "" }
      ]
    }
  ],

  "actions": [
    { "type": "Label", "caption": "Manuelle Steuerung" },
    { "type": "Button", "caption": "Master AN", "onClick": "IRR_Master($id, true);" },
    { "type": "Button", "caption": "Master AUS", "onClick": "IRR_Master($id, false);" },
    { "type": "Button", "caption": "Pumpe AN", "onClick": "IRR_Pump($id, true);" },
    { "type": "Button", "caption": "Pumpe AUS", "onClick": "IRR_Pump($id, false);" },
    { "type": "Label", "caption": "Sequenzen" },
    { "type": "Button", "caption": "Run Sequence 1 now", "onClick": "IRR_RunSequence($id,1);" },
    { "type": "Button", "caption": "Run Sequence 2 now", "onClick": "IRR_RunSequence($id,2);" }
  ],
  "status": []
}
